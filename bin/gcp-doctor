#!/usr/bin/env python3

from absl import app
from absl import flags
from gcp_doctor.inspect.compute.instances import ComputeInstances

import logging
import pprint

FLAGS = flags.FLAGS
#flags.DEFINE_string("name", None, "Your name.")
#flags.DEFINE_integer("num_times", 1,
#                     "Number of times to print greeting.")
#
## Required flag.
#flags.mark_flag_as_required("name")

def main(argv):
  del argv  # Unused.

  logger = logging.getLogger()
  logger.setLevel(logging.WARNING)

  instances = ComputeInstances({ 'project': 'dwes-test', 'zone': 'europe-west4-c'})
  for i in instances:
    pprint.pprint(i)

if __name__ == '__main__':
  app.run(main)
